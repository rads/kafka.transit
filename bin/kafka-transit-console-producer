#!/usr/bin/env bash

get_script_dir() {
  SOURCE="${BASH_SOURCE[0]}"
  while [ -h "$SOURCE" ]; do
    DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
    SOURCE="$( readlink "$SOURCE" )"
    [[ $SOURCE != /* ]] && SOURCE="$DIR/$SOURCE"
  done
  DIR="$( cd -P "$( dirname "$SOURCE" )" && pwd )"
  echo "$DIR"
}

base_dir=$(get_script_dir)/..
export CLASSPATH=$CLASSPATH:$base_dir/target/project.jar
cd $base_dir

if [ ! -f target/project.jar ]; then
  boot uberjar
fi

kafka-console-producer --line-reader rads.kafka.transit.MsgpackMessageReader "$@"
